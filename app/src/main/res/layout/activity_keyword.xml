<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KeywordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미지 업로드 예정"
        android:textSize="30dp" />

<!--    키워드 등록 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/keywordEditTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="내가 오늘 보고 싶은 책의 장르는?"
            android:textSize="15dp"/>
        <ImageButton
            android:id="@+id/registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_baseline_search_24" />
    </LinearLayout>

<!--    키워드 3~6개 화면 표시 -->
    <TextView
        android:id="@+id/keywordTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드 1"/>
    <TextView
        android:id="@+id/keywordTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드 2"/>
    <TextView
        android:id="@+id/keywordTV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드 3"/>
    <TextView
        android:id="@+id/keywordTV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드 4"/>
    <TextView
        android:id="@+id/keywordTV5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드 5"/>
    <TextView
        android:id="@+id/keywordTV6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드 6"/>

</LinearLayout>